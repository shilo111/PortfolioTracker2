<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        /* Sidebar Styles */
        .sidebar {
            height: 100vh;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #11101d;
            transition: all 0.3s ease;
            z-index: 100;
            overflow: hidden;
        }

        .sidebar.closed {
            width: 78px;
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-size: 20px;
            font-weight: bold;
            padding: 15px 20px;
            color: white;
        }

        .toggle-btn {
            position: absolute;
            top: 15px;
            left: 20px; /* תואם את התפריט */
            background-color: #11101d;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            z-index: 102;
            transition: all 0.3s ease;
        }

        .sidebar a {
            padding: 15px 20px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }

        .sidebar a i {
            font-size: 20px;
            margin-right: 15px;
            transition: all 0.3s ease;
        }

        .sidebar.closed a i {
            margin-right: 0;
        }

        .sidebar.closed a span {
            display: none;
        }

        .sidebar a:hover {
            background-color: #63e2cf;
        }

        .sidebar a.active {
            background-color: #63e2cf; /* צבע ירוק */
            color: white; /* צבע הטקסט */
        }

        .sidebar a.active i {
            color: white; /* גם האייקון יהיה בצבע לבן */
        }

        .profile-section {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            color: white;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            transition: all 0.3s ease;
        }

        .content.expanded {
            margin-left: 78px;
        }

        .nav-item {
            position: relative;
        }

        .has-submenu > a {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .submenu {
            display: none;
            list-style: none;
            padding-left: 20px;
            margin-top: 5px;
            background-color: #222;
            border-left: 2px solid #63e2cf;
        }

        .submenu li a {
            color: white;
            padding: 10px 0;
            display: block;
            text-decoration: none;
        }

        /* הוספת אנימציה לחץ */
        .submenu-icon {
            transition: transform 0.3s ease;
        }

        .has-submenu.open .submenu-icon {
            transform: rotate(180deg);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <span>T</span>
        </div>


        <a href="@Url.Action("Index", "Portfolio")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
            <i class="fas fa-home"></i>
            <span>Home</span>
        </a>
        <div class="nav-item has-submenu">
            <a href="#" class="submenu-toggle">
                <i class="fas fa-chart-pie"></i>
                <span>Analytics</span>
                <i class="fas fa-chevron-down submenu-icon"></i>
            </a>
            <ul class="submenu">
                <li><a href="@Url.Action("Graphs", "Analytics")">Graphs</a></li>
                <li><a href="@Url.Action("Reports", "Analytics")">Reports</a></li>
            </ul>
        </div>
        <div class="nav-item has-submenu">
            <a href="#" class="submenu-toggle">
                <i class="fas fa-exchange-alt"></i>
                <span>Transactions</span>
                <i class="fas fa-chevron-down submenu-icon"></i>
            </a>
            <ul class="submenu">
                <li><a href="@Url.Action("Full", "Portfolio")">History Transactions</a></li>
            </ul>
        </div>

        <div class="nav-item has-submenu">
            <a href="#" class="submenu-toggle">
                <i class="fas fa-bell"></i>
                <span>Alerts</span>
                <i class="fas fa-chevron-down submenu-icon"></i>
            </a>
            <ul class="submenu">
                <li><a href="@Url.Action("Active", "Alerts")">Active alerts</a></li>

            </ul>
        </div>
        <a href="#" data-bs-toggle="modal" data-bs-target="#addMarketReturnModal">
            <i class="fas fa-chart-line"></i>
            <span>Add Market Return</span>
        </a>

        <div class="profile-section">
            <a href="#" class="profile-link">
                <i class="fas fa-user-circle"></i>
                <span>John Doe</span>
            </a>
            <a href="#" class="logout-link">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <!-- Toggle Button -->
    <button class="toggle-btn">☰</button>

    <!-- Main Content -->
    <div class="content">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addMarketReturnModal" tabindex="-1" aria-labelledby="addMarketReturnModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMarketReturnModalLabel">Add Market Return</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addMarketReturnForm" action="/Portfolio/AddMarketReturn" method="post">
                        <div class="mb-3">
                            <label for="month" class="form-label">Month:</label>
                            <select id="month" name="month" class="form-control" required>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="year" class="form-label">Year:</label>
                            <input type="number" id="year" name="year" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="returnPercentage" class="form-label">Return (%):</label>
                            <input type="number" id="returnPercentage" name="returnPercentage" class="form-control" step="0.01" required>
                        </div>
                        <button type="submit" class="btn btn-success">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.querySelector('.sidebar');
        const toggleBtn = document.querySelector('.toggle-btn');
        const content = document.querySelector('.content');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('closed');
            toggleBtn.classList.toggle('closed');
            content.classList.toggle('expanded');
        });

        document.querySelectorAll('.submenu-toggle').forEach((toggle) => {
            toggle.addEventListener('click', (e) => {
                e.preventDefault();
                const parent = toggle.parentElement;
                const submenu = toggle.nextElementSibling;

                if (parent.classList.contains('open')) {
                    parent.classList.remove('open');
                    submenu.style.display = 'none';
                } else {
                    parent.classList.add('open');
                    submenu.style.display = 'block';
                }
            });
        });
    </script>
</body>
</html>
